# Test file with empty frontmatter (just delimiters)
cp empty-fm.md empty-fm.md.backup

exec kaleidoscopickitten frontmatter view '.title' empty-fm.md
cmp stdout empty.golden
! stderr .
cmp empty-fm.md empty-fm.md.backup

# Test adding field to empty frontmatter
cp empty-fm.md temp.md
exec kaleidoscopickitten frontmatter edit '.title = "New Title"' temp.md
! stderr .
cmp temp.md with-title.golden

